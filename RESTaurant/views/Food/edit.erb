
<div class="content">
	<form action="/foods/<%= @food.id %>" method="post">
		<input type="hidden" name="_method" value="patch" >

		<label for="food_name">Name</label>
		<input id="food_name" name="food[name]" type="text" value="<%= @food.name %>"><br />

		<label for="food_description">Description</label>
		<input id="food_description" name="food[description]" type="text" value="<%= @food.description %>"><br />

		<label for="food_price">Price</label>
		<input id="food_price" name="food[price]" type="number" value="<%= @food.price %>"><br />

		<label for="food_active">Active</label>
		<input id="food_active" name="food[active]" type="checkbox" value="<%= @food.active %>"><br />

		<input type="submit" value="Update Food Item" class="btn btn-success">
	</form>
</div>
