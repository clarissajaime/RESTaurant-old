
<div class="content">
	<form action="/foods/<%= @food.id %>" method="post">
		<input type="hidden" name="_method" value="patch" >

		<label for="food_name">Name</label>
		<input id="food_name" name="food[name]" type="text" value="<%= @food.name %>"><br /><br />

		<label for="food_description">Description</label>
		<textarea id="food_description" name="food[description]" type="text"><%= @food.description %></textarea><br /><br />

		<label for="food_price">Price</label>
		<input id="food_price" name="food[price]" type="number" value="<%= @food.price %>"><br /><br />

		<label for="food_active">Active</label>
		<select id="food_active" name="food[active]">
			<option value=true <%= selected="selected" if @food.active == true %> >True</option>
			<option value=false <%= selected="selected" if @food.active == false %> >False</option>
		</select><br /><br />

		<center>
		<input type="submit" value="Update Food Item" class="btn btn-success">
		</center>
	</form>
</div>
